# ==============================================================================
# zkIPFS Proof - Environment Configuration Template
# ==============================================================================
# 
# Copy this file to .env and customize for your deployment:
#   cp .env.example .env
#
# ==============================================================================

# ------------------------------------------------------------------------------
# Database Configuration
# ------------------------------------------------------------------------------
POSTGRES_USER=user
POSTGRES_PASSWORD=password  # CHANGE IN PRODUCTION!
POSTGRES_DB=zkipfs
DATABASE_URL=postgres://user:password@db:5432/zkipfs

# ------------------------------------------------------------------------------
# Backend Configuration
# ------------------------------------------------------------------------------
RUST_LOG=info
RISC0_DEV_MODE=1  # Set to 0 for production (real ZK proofs)
SERVER_HOST=0.0.0.0
SERVER_PORT=3000

# ------------------------------------------------------------------------------
# Frontend Configuration
# ------------------------------------------------------------------------------
VITE_API_URL=/api

# ------------------------------------------------------------------------------
# Grafana Configuration
# ------------------------------------------------------------------------------
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=zkipfs-admin  # CHANGE IN PRODUCTION!
GF_USERS_ALLOW_SIGN_UP=false

# ------------------------------------------------------------------------------
# IPFS Configuration (optional)
# ------------------------------------------------------------------------------
# IPFS_API_URL=http://localhost:5001
# IPFS_GATEWAY_URL=http://localhost:8081

# ------------------------------------------------------------------------------
# Security (production only)
# ------------------------------------------------------------------------------
# JWT_SECRET=your-super-secret-jwt-key-change-this
# API_RATE_LIMIT=100
